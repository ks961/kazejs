{
  "compilerOptions": {
    "target": "ES2020", 
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist/types",
    "rootDir": "./src/kaze",
    "module": "ESNext",  // For ESM output
    "lib": ["esnext"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": ["src/kaze/**/*"],
  "exclude": ["node_modules", "dist", "public", "routes", "controllers"]
}
