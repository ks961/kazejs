{
  "compilerOptions": {
    "target": "ES2020", 
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist/types", 
    "rootDir": "./src",
    "module": "ESNext",  // For ESM output
    "lib": ["esnext"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
